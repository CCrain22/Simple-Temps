#:kivy 2.0.0

WindowManager:
    MainWindow:
    SecondWindow:

<MainWindow>:
    name: 'main'
    id: mainscreen
    cputemp: temp_left
    cpupercent: per_left
    gputemp: temp_right
    gpupercent: per_right
    
    GridLayout:
        cols: 3
        rows: 3
        canvas.before:
            Color:
                rgba: 1, 1, 1, 0.1
            Rectangle:
                pos: self.pos
                size: self.size
        
        #CPU label
        Label:
            id: box1
            font_size: 70
            text: 'CPU'
            canvas:
                Rectangle:
                    pos: box1.x + box1.width, 0
                    size: 2, mainscreen.height
        #GPU label
        Label:
            id: box2
            font_size: 70
            text: 'GPU'
            canvas:
                Rectangle:
                    pos: box2.x + box2.width, 0
                    size: 2, mainscreen.height
        #settings icon area
        Button:
            id: box3
            font_size: 70
            text: 'S'
            on_release:
                app.root.current = 'second'
               
        #CPU temp
        Label:
            id: box4
            font_size: 70
            text: str(root.cputemp.numdef) + '°'
            canvas:
                Rectangle:
                    pos: 0, box4.y + box4.height
                    size: mainscreen.width, 2
        #GPU temp
        Label:
            id: box5
            font_size: 70
            text: str(root.gputemp.numdef) + '°'
        #Temp label
        Label:
            id: box6
            font_size: 70
            text: 'C°'
        #CPU percent
        Label:
            id: box7
            font_size: 70
            text: str(root.cpupercent.numdef) + '%'
            canvas:
                Rectangle:
                    pos: 0, box7.y + box7.height
                    size: mainscreen.width, 2
        #GPU percent
        Label:
            id: box8
            font_size: 70
            text: str(root.gpupercent.numdef) + '%'
        Label:
            id: box9
            font_size: 70
            text: '%'
        
        #Defs
        #CPU def
        #Temp
        NumDef:
            id: temp_left
            x: root.x
            center_y: root.center_y
        #Percent
        NumDef:
            id: per_left
            x: root.x
            center_y: root.center_y

        #GPU def
        #Temp
        NumDef:
            id: temp_right
            x: root.width - self.width
            center_y: root.center_y
        #percent
        NumDef:
            id: per_right
            x:root.width - self.width
            center_y: root.center_y

<SecondWindow>:
    name: 'second'

    Button:
        font_size: 70
        text: 'Go back'
        on_release:
            app.root.current = 'main'
           